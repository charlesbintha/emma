APP_NAME="Tontine Parfums"
APP_ENV=production
APP_KEY=base64:VOTRE_CLE_DE_PRODUCTION_ICI
APP_DEBUG=false
APP_URL=https://emmaluxury.store

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=votre_database_hostinger
DB_USERNAME=votre_username_hostinger
DB_PASSWORD=votre_password_hostinger

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DRIVER=public
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Note: En production sur Hostinger, assurez-vous que:
# 1. Le lien symbolique storage est créé: php artisan storage:link
# 2. Les permissions sont correctes: chmod -R 775 storage bootstrap/cache
# 3. Les images sont uploadées dans storage/app/public/perfumes/
